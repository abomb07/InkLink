@model IEnumerable<HelenaGrace.Models.Design>

<div class="container">
    @{ var i = 0;}
    @foreach (var item in Model)
    {
        if (i%3==0)
        {
            @:<div class="row">
        }
        <div class="col">
            <img src="~/images/@item.Path" class="img-fluid">
        </div>
        if (i%3==2)
        {
            @:</div>
        }
        i++;
    }
</div>
